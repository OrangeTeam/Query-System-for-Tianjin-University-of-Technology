<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/dialog_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="20dip"
        android:text="请输入开学第一周星期一的日期"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    	<EditText
	        android:inputType="number"
	        android:id="@+id/input_year_box"
	        android:layout_height="wrap_content"
	        android:layout_width="70dp"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="0dip"
	        android:scrollHorizontally="true"
	        android:gravity="fill_horizontal"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
		 <TextView 
	        android:id="@+id/input_year"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_toRightOf="@+id/input_year_box"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="0dip"
	        android:text="年"
	        android:gravity="left"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
		 <EditText
	        android:inputType="number"
	        android:id="@+id/input_month_box"
	        android:layout_height="wrap_content"
	        android:layout_width="40dp"
	        android:layout_toRightOf="@+id/input_year"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="00dip"
	        android:scrollHorizontally="true"
	        android:gravity="fill_horizontal"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
		 <TextView
	        android:id="@+id/input_month"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="0dip"
	        android:layout_toRightOf="@+id/input_month_box"
	        android:text="月"
	        android:gravity="left"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
		 <EditText
	        android:inputType="number"
	        android:id="@+id/input_date_box"
	        android:layout_height="wrap_content"
	        android:layout_width="40dp"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="0dip"
	        android:layout_toRightOf="@+id/input_month"
	        android:scrollHorizontally="true"
	        android:gravity="fill_horizontal"
	        android:textAppearance="?android:attr/textAppearanceMedium" /> 
	    <TextView 
	        android:id="@+id/input_date"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="20dip"
	        android:layout_toRightOf="@+id/input_date_box"
	        android:text="日"
	        android:gravity="left"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
    </RelativeLayout>
</LinearLayout>